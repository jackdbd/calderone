{
  "name": "root",
  "description": "Monorepo that I use for a bunch of stuff",
  "author": "Giacomo Debidda <giacomo@giacomodebidda.com> (https://giacomodebidda.com/)",
  "homepage": "https://github.com/jackdbd/calderone",
  "private": true,
  "type": "module",
  "keywords": [
    "cloud",
    "gcp",
    "monorepo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jackdbd/calderone"
  },
  "workspaces": [
    "packages/*",
    "scripts/*"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "scripts": {
    "build": "run-s --print-label build:libs build:scripts",
    "build:docs": "npm run build:docs --workspaces --if-present",
    "build:libs": "tsc --build --verbose",
    "build:libs:config": "tsc --project ./packages/firestore-utils/tsconfig.json --showConfig",
    "build:libs:watch": "tsc --build --watch",
    "build:scripts": "npm run build -w packages/scripts",
    "build:scripts:watch": "npm run build:watch -w packages/scripts",
    "build:ts": "npm run build:ts --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "cloudbuild": "gcloud builds submit . --config cloudbuild.yaml --project $GCP_PROJECT_ID --async",
    "copy-dotfiles": "npm run copy-dotfiles --workspaces --if-present",
    "dev:scripts": "run-p build:libs:watch build:scripts:watch",
    "docs": "npm run docs --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "new-package": "./scripts/new-package.mjs",
    "nuke": "npm run clean && rm -rf node_modules package-lock.json",
    "prepare": "husky install",
    "publish:npm": "npm run publish:npm --workspaces --if-present",
    "release": "multi-semantic-release --ignore-private",
    "release:dry": "multi-semantic-release --dry-run --debug",
    "size": "npm run size --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:ci": "npm run test:ci --workspaces --if-present",
    "upload-coverage": "./scripts/upload-coverage",
    "webserver": "npx http-server --port 8080"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@google-cloud/billing": "^2.4.0",
    "@google-cloud/containeranalysis": "^3.4.0",
    "@google-cloud/firestore": "^5.0.2",
    "@google-cloud/functions-framework": "^3.1.1",
    "@google-cloud/monitoring": "^2.3.5",
    "@google-cloud/scheduler": "^2.3.0",
    "@google-cloud/secret-manager": "^3.12.0",
    "@google-cloud/tasks": "^2.6.0",
    "@hapi/vision": "^6.1.0",
    "@microsoft/api-documenter": "^7.17.17",
    "@microsoft/api-extractor": "^7.24.1",
    "@pollyjs/adapter-node-http": "^6.0.5",
    "@pollyjs/core": "^6.0.5",
    "@pollyjs/persister-fs": "^6.0.5",
    "@qiwi/multi-semantic-release": "^6.3.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/better-sqlite3": "^7.5.0",
    "@types/debug": "^4.1.7",
    "@types/google-spreadsheet": "^3.2.2",
    "@types/hapi__hapi": "^20.0.10",
    "@types/node": "^17.0.34",
    "@types/nunjucks": "^3.2.1",
    "@types/pollyjs__adapter-node-http": "^2.0.1",
    "@types/pollyjs__core": "^4.3.3",
    "@types/pollyjs__persister-fs": "^2.0.1",
    "@types/simple-oauth2": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "better-sqlite3": "^7.5.3",
    "debug": "^4.3.4",
    "doctoc": "^2.2.0",
    "esbuild": "^0.14.39",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fs-extra": "^10.1.0",
    "http-server": "^14.1.0",
    "husky": "^8.0.1",
    "ini": "^3.0.0",
    "jest": "^28.1.0",
    "jest-circus": "^28.1.0",
    "js-yaml": "^4.1.0",
    "lint-staged": "^12.4.1",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.3",
    "pkg-size": "^2.4.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.2",
    "simple-oauth2": "^4.3.0",
    "stripe": "^9.1.0",
    "ts-node": "^10.7.0",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.4",
    "wait-port": "^0.2.9",
    "yargs": "^17.5.1",
    "zx": "^6.1.0"
  }
}
