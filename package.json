{
  "name": "root",
  "description": "Monorepo that I use for a bunch of stuff",
  "author": {
    "name": "Giacomo Debidda",
    "email": "giacomo@giacomodebidda.com",
    "url": "https://giacomodebidda.com/"
  },
  "homepage": "https://github.com/jackdbd/calderone",
  "private": true,
  "type": "module",
  "keywords": [
    "cloud",
    "gcp",
    "monorepo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jackdbd/calderone"
  },
  "bugs": {
    "url": "https://github.com/jackdbd/calderone/issues?q=is%3Aissue+label%3Abug"
  },
  "workspaces": [
    "packages/*",
    "scripts/*"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "scripts": {
    "build": "run-s 'build:libs' 'build:scripts' --print-label",
    "build:docs": "npm run build:docs --workspaces --if-present",
    "build:libs": "tsc --build --verbose",
    "build:libs:watch": "tsc --build --watch",
    "build:scripts": "npm run build -w packages/scripts",
    "build:scripts:watch": "npm run build:watch -w packages/scripts",
    "build:ts": "npm run build:ts --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "cloudbuild:node@maintenance_lts": "gcloud builds submit . --config cloudbuild.yaml --project $GCP_PROJECT_ID --async --substitutions=_NODE_VERSION=\"14.19.3\"",
    "cloudbuild:node@active_lts": "gcloud builds submit . --config cloudbuild.yaml --project $GCP_PROJECT_ID --async --substitutions=_NODE_VERSION=lts",
    "cloudbuild:node@current": "gcloud builds submit . --config cloudbuild.yaml --project $GCP_PROJECT_ID --async --substitutions=_NODE_VERSION=current",
    "copy-dotfiles": "npm run copy-dotfiles --workspaces --if-present",
    "dev:scripts": "run-p build:libs:watch build:scripts:watch",
    "docs": "npm run docs --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "ncu:dev": "ncu --doctor --dep 'dev' --upgrade",
    "new-package": "./scripts/new-package.mjs",
    "nuke": "npm run clean && rm -rf node_modules package-lock.json",
    "prepare": "husky install",
    "publish:npmjs": "gcloud builds submit ./cloud-build --async --config cloud-build/publish-to-npmjs.yaml",
    "release": "multi-semantic-release --ignore-private",
    "release:dry": "multi-semantic-release --dry-run --debug",
    "size": "npm run size --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:ci": "npm run test:ci --workspaces --if-present",
    "upload-coverage": "./scripts/upload-coverage",
    "webserver": "npx http-server --port 8080"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@google-cloud/billing": "^3.0.0",
    "@google-cloud/containeranalysis": "^4.1.0",
    "@google-cloud/firestore": "^5.0.2",
    "@google-cloud/functions-framework": "^3.1.2",
    "@google-cloud/monitoring": "^3.0.0",
    "@google-cloud/scheduler": "^3.0.0",
    "@google-cloud/secret-manager": "^4.0.0",
    "@google-cloud/tasks": "^3.0.0",
    "@hapi/vision": "^6.1.0",
    "@microsoft/api-documenter": "^7.17.17",
    "@microsoft/api-extractor": "^7.25.0",
    "@pollyjs/adapter-node-http": "^6.0.5",
    "@pollyjs/core": "^6.0.5",
    "@pollyjs/persister-fs": "^6.0.5",
    "@qiwi/multi-semantic-release": "^6.4.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/better-sqlite3": "^7.5.0",
    "@types/debug": "^4.1.7",
    "@types/google-spreadsheet": "^3.2.2",
    "@types/hapi__hapi": "^20.0.12",
    "@types/hapi__inert": "^5.2.3",
    "@types/hapi__vision": "^5.5.3",
    "@types/node": "^17.0.42",
    "@types/nunjucks": "^3.2.1",
    "@types/pollyjs__adapter-node-http": "^2.0.1",
    "@types/pollyjs__core": "^4.3.3",
    "@types/pollyjs__persister-fs": "^2.0.1",
    "@types/simple-oauth2": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "better-sqlite3": "^7.5.3",
    "debug": "^4.3.4",
    "doctoc": "^2.2.0",
    "esbuild": "^0.14.43",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fs-extra": "^10.1.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.1",
    "ini": "^3.0.0",
    "jest": "^28.1.1",
    "jest-circus": "^28.1.1",
    "js-yaml": "^4.1.0",
    "lint-staged": "^13.0.1",
    "npm-check-updates": "^13.1.3",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.3",
    "pkg-size": "^2.4.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.3",
    "simple-oauth2": "^4.3.0",
    "stripe": "^9.8.0",
    "ts-node": "^10.8.1",
    "typedoc": "^0.22.17",
    "typescript": "^4.7.3",
    "wait-port": "^0.2.9",
    "yargs": "^17.5.1",
    "zx": "^6.2.4"
  }
}
