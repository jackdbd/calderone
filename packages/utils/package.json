{
  "name": "@jackdbd/utils",
  "version": "1.0.0",
  "description": "Miscellaneous utility functions",
  "author": "Giacomo Debidda <giacomo@giacomodebidda.com> (https://giacomodebidda.com/)",
  "license": "MIT",
  "private": false,
  "keywords": [
    "utils"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jackdbd/calderone/tree/main/packages/utils"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "type": "module",
  "module": "lib/index.js",
  "typings": "lib/index.d.ts",
  "exports": {
    ".": "./lib/index.js",
    "./array": "./lib/array.js",
    "./dates": "./lib/dates.js",
    "./deploy": "./lib/deploy.js",
    "./logger": "./lib/logger.js",
    "./path": "./lib/path.js",
    "./test": "./lib/test.js",
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./lib/*.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:ci": "tsc -p tsconfig.cloudbuild.json",
    "clean": "rimraf coverage lib 'tsconfig.tsbuildinfo'",
    "cloudbuild": "gcloud builds submit ../../ --config ../../config/cloudbuild.yaml --project $GCP_PROJECT_ID --async --substitutions=_PACKAGE_NAME=utils",
    "__precloudbuild": "node ../../scripts/copy-config-files.mjs -p utils && node ../../scripts/create-tsconfig.mjs -p utils",
    "__cloudbuild": "gcloud builds submit --config ../../config/cloudbuild-lib.yaml --project $GCP_PROJECT_ID --async",
    "format": "prettier --config ../../config/prettier.cjs --write {__tests__,src}/**/*.{js,mjs,ts}",
    "lint": "eslint --config ../../config/eslint.cjs",
    "nuke": "npm run clean && rimraf node_modules 'package-lock.json'",
    "precommit": "lint-staged --config ../../config/lint-staged.cjs",
    "size": "pkg-size ./lib --sort-by=brotli",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest --selectProjects utils --config ../../config/jest.cjs --rootDir ../../",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules npx jest --config jest.config.cjs --coverageDirectory packages/utils/coverage",
    "test:watch": "npm run test -- --watch"
  },
  "dependencies": {
    "wait-port": "^0.2.9"
  },
  "peerDependencies": {
    "debug": ">=4.3.4"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/node": "^17.0.34",
    "jest": "^28.1.0",
    "typescript": "^4.6.4"
  }
}
