{
  "name": "@jackdbd/wasm-news",
  "version": "0.0.0",
  "description": "Application that retrieves news about webassembly from several APIs (Reddit, Twitter, etc)",
  "author": "Giacomo Debidda <giacomo@giacomodebidda.com> (https://giacomodebidda.com/)",
  "license": "MIT",
  "private": true,
  "keywords": [
    "news",
    "wasm",
    "webassembly"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jackdbd/calderone"
  },
  "engines": {
    "node": ">=16.15.0"
  },
  "type": "module",
  "module": "main.js",
  "scripts": {
    "auth-artifact-registry": "node ../../scripts/cloud-run/predeploy.mjs -p wasm-news",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "clean": "rimraf coverage dist 'tsconfig.tsbuildinfo'",
    "dev": "run-p build:watch start:development",
    "precontainer:build": "run-s clean build auth-artifact-registry",
    "container:build": "pack build wasm-news:latest --path ./dist --builder gcr.io/buildpacks/builder:v1",
    "container:scan": "trivy image --severity MEDIUM,HIGH,CRITICAL -f table wasm-news:latest",
    "container:start:development": "docker run -it -p 8080:8080 --env \"SA_JSON_KEY=$(cat ../../secrets/sa-wasm-news.json)\" --env NODE_ENV=development --env DEBUG=utils/*,wasm-news/* wasm-news:latest",
    "container:start:production": "docker run -it -p 8080:8080 --env \"SA_JSON_KEY=$(cat ../../secrets/sa-wasm-news.json)\" --env NODE_ENV=production --env DEBUG=utils/*,wasm-news/* wasm-news:latest",
    "container:start:test": "docker run -it -p 8080:8080 --env \"SA_JSON_KEY=$(cat ../../secrets/sa-wasm-news.json)\" --env NODE_ENV=test --env DEBUG=utils/*,wasm-news/* wasm-news:latest",
    "predeploy": "run-s clean format lint build auth-artifact-registry",
    "deploy": "gcloud beta builds submit ./dist --config cloudbuild.yaml --project $GCP_PROJECT_ID --async",
    "format": "../../scripts/format.mjs",
    "lint": "eslint --config ../../config/eslint.cjs",
    "nuke": "npm run clean && rimraf node_modules 'package-lock.json'",
    "precommit": "lint-staged --config ../../config/lint-staged.cjs",
    "start:development": "DEBUG=wasm-news/* NODE_ENV=development node ./dist/main.js",
    "start:test": "NODE_ENV=test node --loader ts-node/esm ./src/main.ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest --selectProjects wasm-news --config ../../config/jest.cjs --rootDir ../../ --runInBand --detectOpenHandles",
    "test:ci": "npm run test -- --ci --coverage --coverageDirectory packages/wasm-news/coverage"
  },
  "dependencies": {
    "@google-cloud/debug-agent": "5.2.9",
    "@google-cloud/error-reporting": "2.0.5",
    "@google-cloud/secret-manager": "3.12.0",
    "@google-cloud/workflows": "1.4.0",
    "@hapi/boom": "10.0.0",
    "@hapi/hapi": "20.2.2",
    "@hapi/wreck": "18.0.0",
    "@jackdbd/checks": "^1.1.0",
    "@jackdbd/hapi-healthcheck-plugin": "1.0.2",
    "@jackdbd/notifications": "1.0.0",
    "@jackdbd/secret-manager-utils": "1.0.0",
    "@jackdbd/telegram-text-messages": "^1.1.0",
    "@jackdbd/utils": "^1.1.3",
    "@octokit/rest": "18.12.0",
    "debug": "4.3.4",
    "exiting": "6.1.0",
    "google-spreadsheet": "3.3.0",
    "hapi-dev-errors": "4.0.0",
    "joi": "17.6.0",
    "snoowrap": "1.23.0",
    "twitter-api-v2": "1.12.0",
    "@userscripters/stackexchange-api-types": "3.4.0"
  },
  "devDependencies": {}
}
