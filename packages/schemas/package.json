{
  "name": "@jackdbd/schemas",
  "version": "1.0.0",
  "description": "JSON schemas with Ajv (JSON schema validator)",
  "author": "Giacomo Debidda <giacomo@giacomodebidda.com> (https://giacomodebidda.com/)",
  "license": "MIT",
  "private": true,
  "keywords": [
    "schema"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jackdbd/calderone"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=7.0.0"
  },
  "type": "module",
  "module": "lib/index.js",
  "typings": "lib/index.d.ts",
  "exports": {
    ".": "./lib/index.js",
    "./country-code": "./lib/country-code.js",
    "./sendgrid-email": "./lib/sendgrid-email.js",
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./lib/*.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf coverage lib 'tsconfig.tsbuildinfo'",
    "format": "prettier --config ../../config/prettier.cjs --write {__tests__,src}/**/*.{js,mjs,ts}",
    "lint": "eslint --config ../../config/eslint.cjs",
    "nuke": "npm run clean && rimraf node_modules 'package-lock.json'",
    "precommit": "lint-staged --config ../../config/lint-staged.cjs",
    "prepublish:artifact-registry": "run-s clean build test",
    "publish:artifact-registry": "node ../../scripts/publish/artifact-registry.mjs --package-name schemas",
    "pretest": "run-s build",
    "size": "pkg-size ./lib --sort-by=brotli",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest --selectProjects schemas --config ../../config/jest.cjs --rootDir ../../",
    "test:ci": "npm run test -- --ci --coverage --coverageDirectory packages/schemas/coverage",
    "test:watch": "npm run test -- --watch"
  },
  "dependencies": {},
  "peerDependencies": {
    "ajv": ">=8.10.0",
    "ajv-formats": ">=2.0.0"
  },
  "devDependencies": {}
}
