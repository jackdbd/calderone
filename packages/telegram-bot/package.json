{
  "name": "@jackdbd/telegram-bot",
  "version": "0.0.0",
  "description": "My personal Telegram bot",
  "author": {
    "name": "Giacomo Debidda",
    "email": "giacomo@giacomodebidda.com",
    "url": "https://giacomodebidda.com/"
  },
  "license": "MIT",
  "private": true,
  "keywords": [
    "bot",
    "telegram"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jackdbd/calderone"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "clean": "rimraf coverage dist 'tsconfig.tsbuildinfo'",
    "predeploy": "run-s 'clean' 'build' --print-label",
    "deploy": "gcloud builds submit ./ --config cloudbuild.yaml --async",
    "format": "../../scripts/format.mjs",
    "http-tunnel": "ngrok http 8080",
    "lint": "eslint --config ../../config/eslint.cjs",
    "nuke": "npm run clean && rimraf node_modules 'package-lock.json'",
    "precommit": "lint-staged --config ../../config/lint-staged.cjs",
    "start": "functions-framework --source=dist/index.js --target=telegramBot",
    "start:reloadable": "ls dist/*.js | FIRESTORE_COLLECTION=workflows_callbacks GOOGLE_APPLICATION_CREDENTIALS=../../secrets/sa-telegram-bot.json TELEGRAM_BOT=$(cat ../../secrets/telegram-bot.json) entr -r functions-framework --source=dist/index.js --target=telegramBot",
    "test": "true",
    "test:ci": "true"
  },
  "dependencies": {
    "@google-cloud/firestore": "^6.4.1",
    "@google-cloud/functions-framework": "^3.1.3",
    "@google-cloud/secret-manager": "^4.2.0",
    "@google-cloud/workflows": "^2.2.0",
    "@jackdbd/firestore-utils": "^1.5.0",
    "@jackdbd/tags-logger": "^1.1.0",
    "@jackdbd/telegram-text-messages": "^1.2.0",
    "google-auth-library": "^8.7.0",
    "telegraf": "^4.11.2"
  },
  "devDependencies": {}
}
