{
  "name": "@jackdbd/human-in-the-loop-authorizer",
  "version": "0.0.0",
  "description": "",
  "author": {
    "name": "Giacomo Debidda",
    "email": "giacomo@giacomodebidda.com",
    "url": "https://giacomodebidda.com/"
  },
  "license": "MIT",
  "private": true,
  "keywords": [
    "function",
    "authorization"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jackdbd/calderone"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "module": "index.js",
  "scripts": {
    "predeploy": "run-s lint test",
    "deploy": "gcloud beta builds submit ./ --config cloudbuild.yaml --async",
    "dev": "ls *.js | GOOGLE_APPLICATION_CREDENTIALS=../../secrets/sa-workflows-runner.json NODE_ENV=development TELEGRAM=$(cat ../../secrets/telegram.json) entr -r functions-framework --source index.js --target authorizeCallbackUrl --port 8080",
    "format": "../../scripts/format.mjs",
    "lint": "eslint --config ../../config/eslint.cjs",
    "nuke": "npm run clean && rimraf node_modules 'package-lock.json'",
    "test": "NODE_OPTIONS=--experimental-vm-modules TELEGRAM=$(cat ../../secrets/telegram.json) npx jest --config jest.config.cjs --rootDir ./ --forceExit",
    "test:open-handles": "NODE_OPTIONS=--experimental-vm-modules TELEGRAM=$(cat ../../secrets/telegram.json) npx jest --config jest.config.cjs --rootDir ./ --runInBand --detectOpenHandles",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules npx jest --config jest.config.cjs --rootDir ./ --ci --forceExit"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.1.3",
    "@jackdbd/tags-logger": "1.1.0",
    "google-auth-library": "^8.7.0",
    "phin": "^3.7.0"
  }
}
