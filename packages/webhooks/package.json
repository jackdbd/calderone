{
  "name": "@jackdbd/webhooks",
  "version": "0.0.0",
  "description": "Application that receives webhook events from several third parties",
  "author": "Giacomo Debidda <giacomo@giacomodebidda.com> (https://giacomodebidda.com/)",
  "license": "MIT",
  "private": true,
  "keywords": [
    "netlify",
    "webhooks",
    "webpagetest"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jackdbd/calderone"
  },
  "engines": {
    "node": ">=16.15.0"
  },
  "type": "module",
  "module": "main.js",
  "scripts": {
    "auth-artifact-registry": "node ../../scripts/cloud-run/predeploy.mjs -p webhooks",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "clean": "rimraf coverage dist 'tsconfig.tsbuildinfo'",
    "dev": "run-p build:watch tunnel start:development",
    "precontainer:build": "run-s clean build auth-artifact-registry",
    "container:build": "pack build calderone-webhooks:latest --path ./dist --builder gcr.io/buildpacks/builder:v1",
    "container:start:development": "docker run -it -p 8080:8080 --env \"SA_JSON_KEY=$(cat ../../secrets/sa-webhooks.json)\" --env NODE_ENV=development --env DEBUG=utils/*,webhooks/* calderone-webhooks:latest",
    "container:start:production": "docker run -it -p 8080:8080 --env \"SA_JSON_KEY=$(cat ../../secrets/sa-webhooks.json)\" --env NODE_ENV=production --env DEBUG=utils/*,webhooks/* calderone-webhooks:latest",
    "container:start:test": "docker run -it -p 8080:8080 --env \"SA_JSON_KEY=$(cat ../../secrets/sa-webhooks.json)\" --env NODE_ENV=test --env DEBUG=utils/*,webhooks/* calderone-webhooks:latest",
    "predeploy": "run-s clean format lint build auth-artifact-registry",
    "deploy": "gcloud beta builds submit ./dist --config cloudbuild.yaml --project $GCP_PROJECT_ID --async",
    "format": "../../scripts/format.mjs",
    "lint": "eslint --config ../../config/eslint.cjs",
    "nuke": "npm run clean && rimraf node_modules 'package-lock.json'",
    "precommit": "lint-staged --config ../../config/lint-staged.cjs",
    "start:development": "NODE_ENV=development node ./dist/main.js",
    "start:test": "NODE_ENV=test node --loader ts-node/esm ./src/main.ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest --selectProjects webhooks --config ../../config/jest.cjs --rootDir ../../ --runInBand --detectOpenHandles",
    "test:ci": "npm run test -- --ci --coverage --coverageDirectory packages/webhooks/coverage",
    "tunnel": "ngrok http 8080"
  },
  "dependencies": {
    "@google-cloud/debug-agent": "5.2.9",
    "@google-cloud/error-reporting": "2.0.5",
    "@google-cloud/firestore": "5.0.2",
    "@google-cloud/secret-manager": "3.12.0",
    "@hapi/boom": "10.0.0",
    "@hapi/hapi": "20.2.2",
    "@hapi/inert": "6.0.5",
    "@hapi/vision": "6.1.0",
    "@hapi/wreck": "18.0.0",
    "@jackdbd/checks": "1.1.0",
    "@jackdbd/hapi-healthcheck-plugin": "1.0.2",
    "@jackdbd/hapi-ip-whitelist-plugin": "1.0.2",
    "@jackdbd/notifications": "1.0.0",
    "@jackdbd/secret-manager-utils": "1.0.0",
    "@jackdbd/telegram-text-messages": "1.0.0",
    "@jackdbd/utils": "1.0.1",
    "debug": "4.3.4",
    "exiting": "6.1.0",
    "google-spreadsheet": "3.3.0",
    "hapi-dev-errors": "4.0.0",
    "hapi-swagger": "14.5.1",
    "ipaddr.js": "2.0.1",
    "joi": "17.6.0"
  }
}
