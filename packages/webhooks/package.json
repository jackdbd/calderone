{
  "name": "@jackdbd/webhooks",
  "version": "0.0.1",
  "description": "Application that receives webhook events from several third parties",
  "author": "Giacomo Debidda <giacomo@giacomodebidda.com> (https://giacomodebidda.com/)",
  "license": "MIT",
  "private": true,
  "keywords": [
    "netlify",
    "webhooks",
    "webpagetest"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jackdbd/calderone"
  },
  "engines": {
    "node": ">=16.15.0"
  },
  "type": "module",
  "module": "main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "clean": "rimraf coverage dist 'tsconfig.tsbuildinfo' 'tsconfig-container.json'",
    "dev": "run-p tunnel start:development",
    "precontainer:build": "run-s clean make-tsconfig",
    "container:build": "docker build ./ --file Dockerfile --build-arg APP_NAME=calderone-webhooks --tag calderone-webhooks:latest",
    "container:inspect": "dive calderone-webhooks:latest",
    "container:run:development": "docker run -it --rm -p 8080:8080 --env \"APP_CONFIG=$(cat ../../secrets/webhooks-config-development.json)\" --env NODE_ENV=development --env \"SA_JSON_KEY=$(cat ../../secrets/sa-webhooks.json)\" --env \"TELEGRAM=$(cat ../../secrets/telegram.json)\" calderone-webhooks:latest",
    "make-tsconfig": "../../scripts/make-tsconfig.mjs",
    "predeploy": "run-s clean format lint make-tsconfig",
    "deploy": "gcloud beta builds submit ./ --config cloudbuild.yaml --async",
    "format": "../../scripts/format.mjs",
    "lint": "eslint --config ../../config/eslint.cjs",
    "nuke": "npm run clean && rimraf node_modules 'package-lock.json'",
    "precommit": "lint-staged --config ../../config/lint-staged.cjs",
    "start:development": "APP_CONFIG=$(cat ../../secrets/webhooks-config-development.json) GOOGLE_APPLICATION_CREDENTIALS=../../secrets/sa-webhooks.json NODE_ENV=development node ./dist/main.js",
    "test": "APP_CONFIG=$(cat ../../secrets/webhooks-config-test.json) GOOGLE_APPLICATION_CREDENTIALS=../../secrets/sa-webhooks.json NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules npx jest --selectProjects webhooks --config ../../config/jest.cjs --rootDir ../../ --runInBand --detectOpenHandles",
    "test:ci": "npm run test -- --ci --coverage --coverageDirectory packages/webhooks/coverage",
    "tunnel": "ngrok http 8080"
  },
  "dependencies": {
    "@google-cloud/debug-agent": "5.2.9",
    "@google-cloud/error-reporting": "2.0.5",
    "@google-cloud/firestore": "5.0.2",
    "@google-cloud/secret-manager": "3.12.0",
    "@hapi/boom": "10.0.0",
    "@hapi/hapi": "20.2.2",
    "@hapi/inert": "6.0.5",
    "@hapi/vision": "6.1.0",
    "@hapi/wreck": "18.0.0",
    "@jackdbd/checks": "^1.1.0",
    "@jackdbd/hapi-healthcheck-plugin": "1.0.2",
    "@jackdbd/hapi-logger-plugin": "1.0.0-canary.3",
    "@jackdbd/hapi-request-event-predicates": "1.0.0-canary.1",
    "@jackdbd/hapi-telegram-plugin": "2.0.0-canary.1",
    "@jackdbd/notifications": "1.0.0",
    "@jackdbd/secret-manager-utils": "1.0.0",
    "@jackdbd/telegram-text-messages": "1.0.0",
    "@jackdbd/utils": "^1.2.0",
    "debug": "4.3.4",
    "exiting": "6.1.0",
    "google-spreadsheet": "3.3.0",
    "hapi-dev-errors": "4.0.0",
    "hapi-swagger": "14.5.1",
    "ipaddr.js": "2.0.1",
    "joi": "17.6.0"
  }
}
