{
  "name": "@jackdbd/checks",
  "version": "1.0.3",
  "description": "Functions to check inputs (i.e. predicates)",
  "author": "Giacomo Debidda <giacomo@giacomodebidda.com> (https://giacomodebidda.com/)",
  "license": "MIT",
  "private": false,
  "keywords": [
    "predicate"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jackdbd/calderone"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "type": "module",
  "module": "lib/index.js",
  "typings": "lib/index.d.ts",
  "exports": {
    ".": "./lib/index.js",
    "./environment": "./lib/environment.js",
    "./italian-fiscal-code": "./lib/italian-fiscal-code.js",
    "./type-guards": "./lib/type-guards.js",
    "./vat": "./lib/vat.js",
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "environment": [
        "./lib/environment.d.ts"
      ],
      "italian-fiscal-code": [
        "./lib/italian-fiscal-code.d.ts"
      ],
      "type-guards": [
        "./lib/type-guards.d.ts"
      ],
      "vat": [
        "./lib/vat.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf coverage lib 'tsconfig.tsbuildinfo'",
    "format": "prettier --config ../../config/prettier.cjs --write {__tests__,src}/**/*.{js,mjs,ts}",
    "lint": "eslint --config ../../config/eslint.cjs",
    "nuke": "npm run clean && rimraf node_modules 'package-lock.json'",
    "precommit": "lint-staged --config ../../config/lint-staged.cjs",
    "size": "pkg-size ./lib --sort-by=brotli",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest --selectProjects checks --config ../../config/jest.cjs --rootDir ../../",
    "test:ci": "npm run test -- --ci --coverage --coverageDirectory packages/checks/coverage",
    "test:watch": "npm run test -- --watch"
  },
  "dependencies": {},
  "peerDependencies": {
    "debug": ">=4.3.4"
  },
  "devDependencies": {}
}
